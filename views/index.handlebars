<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <h1>Eat Da Burger!</h1>
      <img class="burgerimg" src="/assets/img/burgerimg.jpg" alt= "Burger Pic">
    </div>
    <div class="col-md-6 text-center">
      <div class="row">
      <h2>Burgers You Can Eat!</h2>
        {{#each burger_data}}
          {{#unless this.devoured}}
        <div class="col-md-9 text-center">
          <h3>{{this.id}}. {{this.burger_name}}</h3>
        </div>
      <div class="col-md-3 text-center">
        <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
          <input type="hidden" name="burger_id" type="text" value={{this.id}}>
          <br>
          <button type="submit" class="btn btn-default">Devour It!</button>
        </form>
      </div>
      {{/unless}}
      {{/each}}
      </div>
    </div>

    <div class="col-md-6 text-center task">
    <h2>Burgers You Have Already Eaten!
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
      </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 text-center enter_section">
      <h2>Enter a Burger You Would Like to Eat!</h2>
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
        <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
      </form>
    </div>
  </div>
</div>


